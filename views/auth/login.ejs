<% layout("layouts/app") %>
<h1 class="text-center">Login</h1>  
<div class="col-md-6 offset-md-3 col-sm-10" style="height: 70vh;">
    <form action="/login" method="POST" class="needs-validation mb-3" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" class="form-control" required>
            <div class="invalid-feedback">
                Please this field is required
              </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control"required>

            <div class="invalid-feedback">  
                Please this field is required
            </div>
        </div>
        <input type="submit" value="Login" class="btn btn-success">
        <p class="text-center mt-3">Don't have an account? <a href="/register">Register here</a></p>
    </form>
</div>
